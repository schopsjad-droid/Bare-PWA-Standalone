rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to validate image file
    function isValidImage() {
      return request.resource.size < 5 * 1024 * 1024  // Max 5MB
        && request.resource.contentType.matches('image/.*');
    }
    
    // Ads images
    match /ads/{imageId} {
      // Anyone can read images (public access)
      allow read: if true;
      
      // Only authenticated users can upload images
      allow create: if isAuthenticated() && isValidImage();
      
      // Only authenticated users can delete images
      // Note: Cloud Function will handle automatic cleanup
      allow delete: if isAuthenticated();
      
      // No updates allowed (delete and recreate instead)
      allow update: if false;
    }
    
    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

